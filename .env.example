# ============================================
# OSI News Automation System - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control!
# ============================================

# ===========================================
# DATABASE CONFIGURATION (MongoDB)
# ===========================================
# Local MongoDB instance (for development)
MONGODB_LOCAL_URI=mongodb://localhost:27017/

# MongoDB Atlas (for production) - Replace with your cluster URI
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Database name
MONGODB_DATABASE=osi_news_automation

# Collection names
MONGODB_COLLECTION_ARTICLES=articles
MONGODB_COLLECTION_TRENDS=trends
MONGODB_COLLECTION_SESSIONS=scraping_sessions

# ===========================================
# GROQ API (Free LLM Service)
# ===========================================
# Get your free API key at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Available models: llama3-70b-8192, llama3-8b-8192, mixtral-8x7b-32768
GROQ_MODEL=llama3-70b-8192

# ===========================================
# HOCALWIRE API INTEGRATION
# ===========================================
# Hocalwire CMS API endpoint
HOCALWIRE_API_URL=https://api.hocalwire.com/api/v2/createfeedv2

# API authentication key
HOCALWIRE_API_KEY=Uhi7pp9Bid0e5FyMVKuN2KJiokg8TqVOYE12Bq9pjztSaRcGAMwRvQxOxGFYdCLp

# Content categorization
HOCALWIRE_CATEGORY_ID=770

# Feed type: CITIZEN_FEED, CONTRIBUTOR_FEED, etc.
HOCALWIRE_NEWS_TYPE=CITIZEN_FEED

# Initial state: SUBMITTED, DRAFT, PUBLISHED
HOCALWIRE_DEFAULT_STATE=SUBMITTED

# ===========================================
# SOCIAL MEDIA API KEYS
# ===========================================
# Twitter/X API (https://developer.twitter.com/)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# LinkedIn API (https://developer.linkedin.com/)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Instagram (via instagrapi - uses login credentials)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# Facebook API (https://developers.facebook.com/)
FACEBOOK_ACCESS_TOKEN=

# ===========================================
# TRANSLATION SERVICE
# ===========================================
# Enable/disable translation feature
TRANSLATION_ENABLED=true

# Source language detection (auto = automatic detection)
SOURCE_LANGUAGE=auto

# Target languages for translation (comma-separated ISO codes)
TARGET_LANGUAGES=en,hi,es,fr,ar

# ===========================================
# SCRAPING CONFIGURATION
# ===========================================
# How often to run scraping (in hours)
SCRAPING_INTERVAL_HOURS=3

# Maximum articles to process per automation run
MAX_ARTICLES_PER_RUN=50

# Articles per source limits
MIN_ARTICLES_PER_SOURCE=2
MAX_ARTICLES_PER_SOURCE=10

# Duplicate detection threshold (0.0-1.0, higher = stricter)
DUPLICATE_SIMILARITY_THRESHOLD=0.85

# ===========================================
# CONTENT GENERATION
# ===========================================
# Article length constraints (word count)
ARTICLE_MIN_WORDS=800
ARTICLE_MAX_WORDS=1200

# Include subheadings in generated articles
INCLUDE_SUBHEADINGS=true

# Number of subheadings per article
SUBHEADING_COUNT=5

# ===========================================
# IMAGE GENERATION (Local Stable Diffusion)
# ===========================================
# Enable/disable image generation
IMAGE_GENERATION_ENABLED=true

# Output image dimensions
IMAGE_WIDTH=1024
IMAGE_HEIGHT=768

# Path to Stable Diffusion model weights
IMAGE_MODEL_PATH=models/stable-diffusion

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=output/logs/automation.log

# Log rotation size (e.g., "10 MB", "100 KB")
LOG_ROTATION=10 MB

# ===========================================
# FEATURE FLAGS (MVP Configuration)
# ===========================================
# Core features - enabled for MVP
ENABLE_TREND_DETECTION=true
ENABLE_ARTICLE_GENERATION=true
ENABLE_HOCALWIRE_UPLOAD=true

# Advanced features - disabled for MVP
ENABLE_IMAGE_GENERATION=false
ENABLE_TRANSLATION=false
ENABLE_SOCIAL_POSTING=false

# ===========================================
# SYSTEM SETTINGS
# ===========================================
# Retry configuration for failed requests
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# HTTP request timeout
REQUEST_TIMEOUT_SECONDS=30

# User agent for web scraping
USER_AGENT=RobinOSI-Bot/1.0

# ===========================================
# FAILED UPLOAD RETRY QUEUE
# ===========================================
# Enable/disable automatic retry of failed uploads
RETRY_FAILED_UPLOADS_ENABLED=true

# How often to check and retry failed uploads (in minutes)
RETRY_INTERVAL_MINUTES=30

# Maximum retry attempts per article before giving up
MAX_GLOBAL_UPLOAD_RETRIES=10

# Number of articles to process per retry run
RETRY_BATCH_SIZE=20
